---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';
import { tagToSlug } from '../../lib/slug';
// Generated SVG thumbnails (URL map)
const thumbs = import.meta.glob('../../assets/thumbs/*.svg', { eager: true, query: '?url', import: 'default' });

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const enhanced = posts.map((p) => ({ ...p, thumb: thumbs[`../../assets/thumbs/${p.id}.svg`] }));
---

<!doctype html>
<html lang="sk">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			/* Glass look to match homepage */
			.glass { background: rgba(255,255,255,0.5); backdrop-filter: saturate(140%) blur(12px); -webkit-backdrop-filter: saturate(140%) blur(12px); border: 1px solid rgba(255,255,255,0.35); border-radius: 20px; box-shadow: 0 10px 30px rgba(0,0,0,0.08); }
			main {
				width: 960px;
				margin: 0px auto;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(47% - 1rem);
				text-align: center;
			}
			/* Card padding + rounded corners like homepage */
			ul li.glass { padding: 0.75rem; border-radius: 14px; }
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			/* Keep the first (newest) big, but still glass */
			ul li:first-child.glass { padding: 1rem; }
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img,
			ul li svg {
				display: block;
				width: 100%;
				height: auto;
				margin-bottom: 20px;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			.meta {
				margin: 0.25em 0 0.25em 0;
				color: rgb(var(--gray));
				font-size: 0.95em;
			}
			.tags {
				margin-top: 0.25em;
				color: rgb(var(--gray));
			}
			.tag {
				display: inline-block;
				background: rgb(var(--gray-light));
				color: rgb(var(--gray-dark));
				border-radius: 999px;
				padding: 2px 10px;
				margin: 0 6px 0 0;
				font-size: 0.8em;
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img,
			ul a:hover svg {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						enhanced.map((post) => (
							<li class="glass">
								<a href={`${import.meta.env.BASE_URL}blog/${post.id}/`}>
									<img src={post.thumb} alt="" />
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
									<p class="meta">Autor: {post.data.author}</p>
									{Array.isArray(post.data.tags) && post.data.tags.length > 0 && (
										<div class="tags" aria-label="Značky">
											{post.data.tags.map((t) => <a class="tag" href={`/tags/${tagToSlug(t)}/`}>{t}</a>)}
										</div>
									)}
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
