// Minimal giscus embed component.
// Make sure GitHub Discussions are enabled on the repo and the giscus app is installed.
// Repo: Ljuk67/kriticky
---

<section aria-label="Komentáre">
  <script
    src="https://giscus.app/client.js"
    data-repo="Ljuk67/kriticky"
    data-mapping="pathname"
    data-strict="1"
    data-reactions-enabled="1"
    data-emit-metadata="0"
    data-input-position="bottom"
    data-theme="preferred_color_scheme"
    data-lang="sk"
    data-loading="lazy"
    crossorigin="anonymous"
    async>
  </script>
  <noscript>Na zobrazenie komentárov povoľ JavaScript.</noscript>
</section>

